<h1>Shelters</h1>
<% @shelters.each do |shelter| %>
  <ul>
    <section id="shelter-<%= shelter.id %>">
      <li><%= link_to "#{shelter.name}", "shelters/#{shelter.id}" %></li>
    </section>
  </ul>
<% end %>

<% if @pending.empty? == false %>
  <h1>Pending Applications</h1>
    <section id="pending_applications">
      <% @pending.each do |shelter| %>
        <ul>
          <section id="pending-<%= shelter.id %>">
            <li><%= link_to "#{shelter.name}", "shelters/#{shelter.id}" %></li>
          </section>
        </ul>
      <% end %>
    </section>
<% end %>